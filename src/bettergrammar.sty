\newenvironment{figuregrammar}[3]{
    \let\@afterindentfalse\@afterindenttrue % we want \parindent anywhere
    \chapter{\bibname}%
    \setlength{\leftskip}{4em}%
    \setlength{\parindent}{-\leftskip}
    \fontfamily{pcr}\selectfont

    #1: #2 ::= #3
}{}
